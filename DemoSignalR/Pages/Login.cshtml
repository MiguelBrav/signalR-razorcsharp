@page
@model LoginModel
@{
}

@{
    ViewData["Title"] = "Login";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="email">Email:</label>
        <input asp-for="email" class="form-control" required type="email" />
        <span asp-validation-for="email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="pass">Password:</label>
        <input asp-for="pass" type="password" class="form-control" required />
        <span asp-validation-for="pass" class="text-danger"></span>
    </div>

    <div class="mt-3 text-center">
        <button type="submit" class="btn btn-primary" asp-page-handler="Login">Login</button>
    </div>

    <div class="mt-5 text-center">
        <img src="~/img/azureSignalR.png" class="img-fluid w-25" asp-append-version="true" />
    </div>
</form>


